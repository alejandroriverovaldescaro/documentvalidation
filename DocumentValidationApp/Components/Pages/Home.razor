@page "/"
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resources.SharedResource> Localizer

<PageTitle>@Localizer["Nav.AppName"] - @Localizer["Nav.Home"]</PageTitle>

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 mb-3" style="color: #0066CC; font-weight: 600;">
            <i class="bi bi-shield-check"></i>
            @Localizer["Home.Title"]
        </h1>
        <p class="lead text-secondary mb-4">
            @Localizer["Home.Subtitle"]
        </p>
        <p class="text-muted mb-5">
            @Localizer["Home.Description"]
        </p>

        <div class="d-flex gap-2 justify-content-center mb-5">
            <a href="/document-validation" class="btn btn-primary btn-lg px-4">
                <i class="bi bi-upload"></i> @Localizer["Home.UploadButton"]
            </a>
        </div>
    </div>

    <div class="dashboard-grid">
        <div class="dashboard-card">
            <div class="dashboard-card-header">
                <i class="bi bi-file-earmark-pdf" style="color: #0066CC; font-size: 1.5rem;"></i>
                @Localizer["Home.PDFSupport"]
            </div>
            <div class="dashboard-card-content">
                <p class="text-secondary">
                    @Localizer["Home.PDFDescription"]
                </p>
            </div>
        </div>

        <div class="dashboard-card">
            <div class="dashboard-card-header">
                <i class="bi bi-image" style="color: #00BCD4; font-size: 1.5rem;"></i>
                @Localizer["Home.ImageProcessing"]
            </div>
            <div class="dashboard-card-content">
                <p class="text-secondary">
                    @Localizer["Home.ImageDescription"]
                </p>
            </div>
        </div>

        <div class="dashboard-card">
            <div class="dashboard-card-header">
                <i class="bi bi-search" style="color: #4CAF50; font-size: 1.5rem;"></i>
                @Localizer["Home.SmartDetection"]
            </div>
            <div class="dashboard-card-content">
                <p class="text-secondary">
                    @Localizer["Home.SmartDescription"]
                </p>
            </div>
        </div>
    </div>

    <div class="dashboard-card mt-4">
        <div class="dashboard-card-header">
            <i class="bi bi-info-circle"></i> @Localizer["Home.SupportedDocuments"]
        </div>
        <div class="dashboard-card-content">
            <div class="row">
                <div class="col-md-4">
                    <ul>
                        <li><strong>@Localizer["Home.Passports"]</strong> - @Localizer["Home.PassportsDesc"]</li>
                        <li><strong>@Localizer["Home.DriversLicense"]</strong> - @Localizer["Home.DriversLicenseDesc"]</li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <ul>
                        <li><strong>@Localizer["Home.IdentityCards"]</strong> - @Localizer["Home.IdentityCardsDesc"]</li>
                        <li><strong>@Localizer["Home.OtherDocuments"]</strong> - @Localizer["Home.OtherDocumentsDesc"]</li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 class="font-weight-bold">@Localizer["Home.ExtractedData"]</h6>
                    <ul>
                        <li>@Localizer["Home.ExpirationDates"]</li>
                        <li>@Localizer["Home.DocumentNumbers"]</li>
                        <li>@Localizer["Home.IssuingAuthorities"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

