@page "/document-validation"
@rendermode InteractiveServer
@using DocumentValidationApp.Models
@using DocumentValidationApp.Services
@inject IDocumentValidationService ValidationService

<PageTitle>Document Validation</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4" style="color: #0066CC; font-weight: 600;">
        <i class="bi bi-file-earmark-check"></i> Document Validation
    </h1>

    <div class="row">
        <div class="col-md-8">
            <div class="dashboard-card">
                <div class="dashboard-card-header">Upload Document for Validation</div>
                <div class="dashboard-card-content">
                    <p class="text-secondary">
                        Upload a document (PDF, PNG, JPG, JPEG) to validate its type and extract key information.
                        Supported documents: Passport, Driver's License, ID Card.
                    </p>

                    <div class="mb-3">
                        <label for="processingMethod" class="form-label font-weight-bold">
                            <i class="bi bi-gear-fill"></i> Processing Method
                        </label>
                        <select id="processingMethod" class="form-select" @bind="selectedMethod">
                            <option value="@ProcessingMethod.TesseractOCR">Tesseract OCR (Traditional text extraction)</option>
                            <option value="@ProcessingMethod.OllamaVision">Ollama AI Vision (Qwen2-VL - Advanced image analysis)</option>
                        </select>
                        <div class="form-text text-muted">
                            @if (selectedMethod == ProcessingMethod.TesseractOCR)
                            {
                                <span>Traditional OCR for text extraction from document images.</span>
                            }
                            else
                            {
                                <span>AI-powered vision model for comprehensive document analysis. Requires Ollama with qwen2-vl:8b model.</span>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="fileInput" class="form-label font-weight-bold">Select Document</label>
                        <InputFile OnChange="HandleFileSelected" 
                                   class="form-control" 
                                   id="fileInput" 
                                   accept=".pdf,.png,.jpg,.jpeg" />
                        <div class="form-text text-muted">
                            Accepted formats: PDF, PNG, JPG, JPEG (Max size: 10MB)
                        </div>
                    </div>

                    @if (isProcessing)
                    {
                        <div class="alert alert-info">
                            <div class="spinner-border spinner-border-sm me-2" role="status">
                                <span class="visually-hidden">Processing...</span>
                            </div>
                            Processing document with @selectedMethod... Please wait.
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            @errorMessage
                            <button type="button" class="btn-close" @onclick="ClearError"></button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="dashboard-card" style="background-color: #E6F2FF;">
                <div class="dashboard-card-header">
                    <i class="bi bi-info-circle"></i> How it works
                </div>
                <div class="dashboard-card-content">
                    <ol style="font-size: 13px;">
                        <li>Select processing method</li>
                        <li>Upload your document</li>
                        <li>The system analyzes the file</li>
                        <li>Document type is identified</li>
                        <li>Key data is extracted (dates, numbers)</li>
                        <li>Validation results are displayed</li>
                    </ol>
                    <hr />
                    <h6 class="font-weight-bold"><i class="bi bi-cpu-fill"></i> Processing Methods</h6>
                    <div style="font-size: 13px;" class="text-secondary mb-2">
                        <strong>Tesseract OCR:</strong> Fast, reliable text extraction
                    </div>
                    <div style="font-size: 13px;" class="text-secondary mb-2">
                        <strong>Ollama Vision:</strong> Advanced AI analysis with better context understanding
                    </div>
                    <hr />
                    <h6 class="font-weight-bold"><i class="bi bi-shield-check"></i> Privacy</h6>
                    <p style="font-size: 13px;" class="text-secondary">
                        Documents are processed in memory and not stored on the server. Ollama runs locally on your machine.
                    </p>
                </div>
            </div>
        </div>
    </div>

    @if (validationResult != null && validationResult.IsValid)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="dashboard-card" style="border-left: 4px solid #4CAF50;">
                    <div class="dashboard-card-header" style="background-color: #4CAF50; color: white; margin: -24px -24px 20px -24px; padding: 16px 24px; border-radius: 12px 12px 0 0;">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        Validation Results
                    </div>
                    <div class="dashboard-card-content">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="font-weight-bold" style="color: #0066CC;">Document Information</h6>
                                <table class="table table-sm">
                                    <tbody>
                                        <tr>
                                            <th width="40%">Document Type:</th>
                                            <td><span class="badge" style="background-color: #0066CC; color: white;">@validationResult.DocumentType</span></td>
                                        </tr>
                                        <tr>
                                            <th>Description:</th>
                                            <td>@validationResult.Description</td>
                                        </tr>
                                        @if (!string.IsNullOrEmpty(validationResult.DocumentNumber))
                                        {
                                            <tr>
                                                <th>Document Number:</th>
                                                <td><code>@validationResult.DocumentNumber</code></td>
                                            </tr>
                                        }
                                        @if (!string.IsNullOrEmpty(validationResult.ExpirationDate))
                                        {
                                            <tr>
                                                <th>Expiration Date:</th>
                                                <td><strong>@validationResult.ExpirationDate</strong></td>
                                            </tr>
                                        }
                                        @if (!string.IsNullOrEmpty(validationResult.IssuingAuthority))
                                        {
                                            <tr>
                                                <th>Issuing Authority:</th>
                                                <td>@validationResult.IssuingAuthority</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="col-md-6">
                                <h6 class="font-weight-bold" style="color: #0066CC;">Validation Messages</h6>
                                @if (validationResult.ValidationMessages.Any())
                                {
                                    <ul class="list-group list-group-flush">
                                        @foreach (var message in validationResult.ValidationMessages)
                                        {
                                            <li class="list-group-item" style="border: none; padding: 8px 0; font-size: 13px;">@message</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="text-muted">No validation messages.</p>
                                }
                            </div>
                        </div>

                        @if (validationResult.ExtractedText.Any())
                        {
                            <div class="mt-3">
                                <h6 class="font-weight-bold" style="color: #0066CC;">Extracted Text</h6>
                                <div class="rounded" style="background-color: #F8F9FA; padding: 16px; max-height: 300px; overflow-y: auto;">
                                    @foreach (var text in validationResult.ExtractedText)
                                    {
                                        <pre style="font-size: 12px; margin-bottom: 8px;">@text</pre>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else if (validationResult != null && !validationResult.IsValid)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-danger" style="border-left: 4px solid #DC3545;">
                    <h5><i class="bi bi-x-circle-fill me-2"></i>Validation Failed</h5>
                    <p>@validationResult.ErrorMessage</p>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private DocumentValidationResult? validationResult;
    private bool isProcessing = false;
    private string? errorMessage;
    private const long MaxFileSize = 10 * 1024 * 1024; // 10MB
    private ProcessingMethod selectedMethod = ProcessingMethod.TesseractOCR;

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        errorMessage = null;
        validationResult = null;
        isProcessing = true;

        try
        {
            var file = e.File;

            // Validate file size
            if (file.Size > MaxFileSize)
            {
                errorMessage = $"File size exceeds the maximum allowed size of 10MB. Your file is {file.Size / 1024 / 1024:F2}MB.";
                return;
            }

            // Validate file type
            var allowedExtensions = new[] { ".pdf", ".png", ".jpg", ".jpeg" };
            var fileExtension = Path.GetExtension(file.Name).ToLower();
            if (!allowedExtensions.Contains(fileExtension))
            {
                errorMessage = "Invalid file type. Please upload PDF or image files (PNG, JPG, JPEG).";
                return;
            }

            // Process the file
            using var stream = file.OpenReadStream(MaxFileSize);
            using var memoryStream = new MemoryStream();
            await stream.CopyToAsync(memoryStream);
            memoryStream.Position = 0;

            validationResult = await ValidationService.ValidateDocumentAsync(
                memoryStream,
                file.Name,
                file.ContentType,
                selectedMethod
            );
        }
        catch (Exception ex)
        {
            errorMessage = $"Error processing file: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }

    private void ClearError()
    {
        errorMessage = null;
    }
}
