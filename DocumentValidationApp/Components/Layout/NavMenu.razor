@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resources.SharedResource> Localizer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">@Localizer["Nav.AppName"]</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @Localizer["Nav.Home"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="document-validation">
                <span class="bi bi-file-earmark-check-fill" aria-hidden="true"></span> @Localizer["Nav.DocumentValidation"]
            </NavLink>
        </div>

        <div class="nav-item px-3 mt-3">
            <CultureSelector />
        </div>
    </nav>
</div>

