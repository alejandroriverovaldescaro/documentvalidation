@page "/"

<PageTitle>Identity Verification System</PageTitle>

<div class="home-container">
    <div class="hero-section">
        <h1 class="hero-title">🎭 Identity Verification System</h1>
        <p class="hero-subtitle">
            Secure, fast, and reliable face matching for identity verification
        </p>
        <a href="/verification" class="btn-hero">Start Verification →</a>
    </div>

    <div class="features-section">
        <h2>Key Features</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">🚀</div>
                <h3>Fast Processing</h3>
                <p>Get verification results in seconds with our optimized pipeline</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🔒</div>
                <h3>Secure & Private</h3>
                <p>Your data is processed securely and never stored permanently</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">✨</div>
                <h3>Smart Detection</h3>
                <p>Advanced algorithms ensure accurate face matching</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">📱</div>
                <h3>User Friendly</h3>
                <p>Simple 2-step process that anyone can complete</p>
            </div>
        </div>
    </div>

    <div class="how-it-works">
        <h2>How It Works</h2>
        <div class="steps-container">
            <div class="step">
                <div class="step-number">1</div>
                <h3>Capture Selfie</h3>
                <p>Take a quick photo of yourself</p>
            </div>
            <div class="step-arrow">→</div>
            <div class="step">
                <div class="step-number">2</div>
                <h3>Upload ID</h3>
                <p>Upload your government-issued ID photo</p>
            </div>
            <div class="step-arrow">→</div>
            <div class="step">
                <div class="step-number">3</div>
                <h3>Get Results</h3>
                <p>Receive instant verification status</p>
            </div>
        </div>
    </div>

    <div class="cta-section">
        <h2>Ready to Verify Your Identity?</h2>
        <p>Join thousands of users who trust our verification system</p>
        <a href="/verification" class="btn-cta">Get Started Now</a>
    </div>
</div>

<style>
    .home-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .hero-section {
        text-align: center;
        padding: 4rem 2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        color: white;
        margin-bottom: 4rem;
    }

    .hero-title {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 1rem;
        animation: fadeIn 0.8s ease-out;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        opacity: 0.95;
        margin-bottom: 2rem;
        animation: fadeIn 1s ease-out;
    }

    .btn-hero {
        display: inline-block;
        padding: 1rem 2.5rem;
        background: white;
        color: #667eea;
        text-decoration: none;
        border-radius: 10px;
        font-weight: 700;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .btn-hero:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
    }

    .features-section, .how-it-works, .cta-section {
        margin-bottom: 4rem;
    }

    .features-section h2, .how-it-works h2, .cta-section h2 {
        text-align: center;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 3rem;
        color: #1f2937;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    .feature-card {
        padding: 2rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        text-align: center;
    }

    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }

    .feature-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .feature-card h3 {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 0.5rem;
    }

    .feature-card p {
        color: #6b7280;
        line-height: 1.6;
    }

    .steps-container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
        gap: 2rem;
    }

    .step {
        flex: 1;
        min-width: 200px;
        max-width: 300px;
        text-align: center;
        padding: 2rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .step-number {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0 auto 1rem;
    }

    .step h3 {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 0.5rem;
    }

    .step p {
        color: #6b7280;
    }

    .step-arrow {
        font-size: 2rem;
        color: #667eea;
        font-weight: 700;
    }

    .cta-section {
        text-align: center;
        padding: 4rem 2rem;
        background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
        border-radius: 20px;
    }

    .cta-section p {
        font-size: 1.1rem;
        color: #6b7280;
        margin-bottom: 2rem;
    }

    .btn-cta {
        display: inline-block;
        padding: 1rem 2.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        text-decoration: none;
        border-radius: 10px;
        font-weight: 700;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

    .btn-cta:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2rem;
        }

        .hero-subtitle {
            font-size: 1rem;
        }

        .step-arrow {
            display: none;
        }

        .features-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

