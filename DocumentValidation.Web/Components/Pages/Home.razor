@page "/"

<PageTitle>Identity Verification System</PageTitle>

<div class="home-container">
    <div class="hero-section">
        <h1 class="hero-title">🎭 Identity Verification System</h1>
        <p class="hero-subtitle">
            Secure, fast, and reliable face matching for identity verification
        </p>
        <a href="/verification" class="btn-hero">Start Verification →</a>
    </div>

    <div class="features-section">
        <h2>Key Features</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">🚀</div>
                <h3>Fast Processing</h3>
                <p>Get verification results in seconds with our optimized pipeline</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🔒</div>
                <h3>Secure & Private</h3>
                <p>Your data is processed securely and never stored permanently</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">✨</div>
                <h3>Smart Detection</h3>
                <p>Advanced algorithms ensure accurate face matching</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">📱</div>
                <h3>User Friendly</h3>
                <p>Simple 2-step process that anyone can complete</p>
            </div>
        </div>
    </div>

    <div class="how-it-works">
        <h2>How It Works</h2>
        <div class="steps-container">
            <div class="step">
                <div class="step-number">1</div>
                <h3>Capture Selfie</h3>
                <p>Take a quick photo of yourself</p>
            </div>
            <div class="step-arrow">→</div>
            <div class="step">
                <div class="step-number">2</div>
                <h3>Upload ID</h3>
                <p>Upload your government-issued ID photo</p>
            </div>
            <div class="step-arrow">→</div>
            <div class="step">
                <div class="step-number">3</div>
                <h3>Get Results</h3>
                <p>Receive instant verification status</p>
            </div>
        </div>
    </div>

    <div class="cta-section">
        <h2>Ready to Verify Your Identity?</h2>
        <p>Join thousands of users who trust our verification system</p>
        <a href="/verification" class="btn-cta">Get Started Now</a>
    </div>
</div>

<style>
    .home-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: var(--spacing-xxxl, 32px);
    }

    .hero-section {
        text-align: center;
        padding: 80px var(--spacing-xxxl, 32px);
        background: linear-gradient(135deg, var(--brand-primary, #0078d4) 0%, #5a58d1 100%);
        border-radius: var(--border-radius-xlarge, 16px);
        color: white;
        margin-bottom: 64px;
        box-shadow: var(--shadow-8, 0 8px 16px rgba(0, 0, 0, 0.14));
    }

    .hero-title {
        font-size: var(--font-size-900, 40px);
        font-weight: var(--font-weight-semibold, 600);
        margin-bottom: var(--spacing-l, 16px);
        animation: fadeIn 0.6s var(--curve-decelerate, ease-out);
    }

    .hero-subtitle {
        font-size: var(--font-size-500, 20px);
        opacity: 0.95;
        margin-bottom: var(--spacing-xxxl, 32px);
        animation: fadeIn 0.8s var(--curve-decelerate, ease-out);
        font-weight: var(--font-weight-regular, 400);
    }

    .btn-hero {
        display: inline-flex;
        align-items: center;
        gap: var(--spacing-s, 8px);
        padding: var(--spacing-l, 16px) var(--spacing-xxxl, 32px);
        background: white;
        color: var(--brand-primary, #0078d4);
        text-decoration: none;
        border-radius: var(--border-radius-medium, 8px);
        font-weight: var(--font-weight-semibold, 600);
        font-size: var(--font-size-400, 16px);
        transition: all var(--duration-normal, 200ms) var(--curve-easy-ease, ease);
        box-shadow: var(--shadow-8, 0 8px 16px rgba(0, 0, 0, 0.14));
    }

    .btn-hero:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-16, 0 16px 32px rgba(0, 0, 0, 0.14));
        color: var(--brand-primary-hover, #106ebe);
        text-decoration: none;
    }

    .features-section, .how-it-works, .cta-section {
        margin-bottom: 64px;
    }

    .features-section h2, .how-it-works h2, .cta-section h2 {
        text-align: center;
        font-size: var(--font-size-800, 32px);
        font-weight: var(--font-weight-semibold, 600);
        margin-bottom: 48px;
        color: var(--neutral-foreground-1, #242424);
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: var(--spacing-xxl, 24px);
    }

    .feature-card {
        padding: var(--spacing-xxxl, 32px);
        background: var(--neutral-background-1, #ffffff);
        border-radius: var(--border-radius-large, 12px);
        border: 1px solid var(--neutral-background-5, #e0e0e0);
        box-shadow: var(--shadow-2, 0 2px 4px rgba(0, 0, 0, 0.14));
        transition: all var(--duration-normal, 200ms) var(--curve-easy-ease, ease);
        text-align: center;
    }

    .feature-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-8, 0 8px 16px rgba(0, 0, 0, 0.14));
        border-color: var(--brand-primary, #0078d4);
    }

    .feature-icon {
        font-size: 48px;
        margin-bottom: var(--spacing-l, 16px);
    }

    .feature-card h3 {
        font-size: var(--font-size-500, 20px);
        font-weight: var(--font-weight-semibold, 600);
        color: var(--neutral-foreground-1, #242424);
        margin-bottom: var(--spacing-s, 8px);
    }

    .feature-card p {
        color: var(--neutral-foreground-2, #424242);
        line-height: var(--line-height-400, 22px);
    }

    .steps-container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
        gap: var(--spacing-xxl, 24px);
    }

    .step {
        flex: 1;
        min-width: 200px;
        max-width: 300px;
        text-align: center;
        padding: var(--spacing-xxxl, 32px);
        background: var(--neutral-background-1, #ffffff);
        border-radius: var(--border-radius-large, 12px);
        border: 1px solid var(--neutral-background-5, #e0e0e0);
        box-shadow: var(--shadow-2, 0 2px 4px rgba(0, 0, 0, 0.14));
    }

    .step-number {
        width: 56px;
        height: 56px;
        background: var(--brand-primary, #0078d4);
        color: white;
        border-radius: var(--border-radius-circular, 50%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: var(--font-size-600, 24px);
        font-weight: var(--font-weight-semibold, 600);
        margin: 0 auto var(--spacing-l, 16px);
    }

    .step h3 {
        font-size: var(--font-size-500, 20px);
        font-weight: var(--font-weight-semibold, 600);
        color: var(--neutral-foreground-1, #242424);
        margin-bottom: var(--spacing-s, 8px);
    }

    .step p {
        color: var(--neutral-foreground-2, #424242);
    }

    .step-arrow {
        font-size: var(--font-size-800, 32px);
        color: var(--brand-primary, #0078d4);
        font-weight: var(--font-weight-semibold, 600);
    }

    .cta-section {
        text-align: center;
        padding: 64px var(--spacing-xxxl, 32px);
        background: var(--neutral-background-2, #fafafa);
        border-radius: var(--border-radius-xlarge, 16px);
        border: 1px solid var(--neutral-background-5, #e0e0e0);
    }

    .cta-section p {
        font-size: var(--font-size-400, 16px);
        color: var(--neutral-foreground-2, #424242);
        margin-bottom: var(--spacing-xxxl, 32px);
    }

    .btn-cta {
        display: inline-flex;
        align-items: center;
        gap: var(--spacing-s, 8px);
        padding: var(--spacing-l, 16px) var(--spacing-xxxl, 32px);
        background: var(--brand-primary, #0078d4);
        color: white;
        text-decoration: none;
        border-radius: var(--border-radius-medium, 8px);
        font-weight: var(--font-weight-semibold, 600);
        font-size: var(--font-size-400, 16px);
        transition: all var(--duration-normal, 200ms) var(--curve-easy-ease, ease);
        box-shadow: var(--shadow-4, 0 4px 8px rgba(0, 0, 0, 0.14));
    }

    .btn-cta:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-8, 0 8px 16px rgba(0, 0, 0, 0.14));
        background-color: var(--brand-primary-hover, #106ebe);
        text-decoration: none;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .home-container {
            padding: var(--spacing-l, 16px);
        }

        .hero-section {
            padding: 48px var(--spacing-l, 16px);
        }

        .hero-title {
            font-size: var(--font-size-800, 32px);
        }

        .hero-subtitle {
            font-size: var(--font-size-400, 16px);
        }

        .step-arrow {
            display: none;
        }

        .features-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

